{% extends 'base.html.twig' %}

{% block title %}Edit User1{% endblock %}

{% block body %}
    <center><h1 class="hvr-float-shadow">Edit My Profile</h1></center>

    {{ include('user1/_form.html.twig', {'button_label': 'Update'}) }}

    <style>
        .circle-image{
            display: inline-block;
            border-radius: 50%;
            overflow: hidden;
            width: 250px;
            height: 250px;
        }
        .circle-image img{
            width:100%;
            height:100%;
            object-fit: cover;
        }

        /* Zoom-n-rotate Container */
        .img-hover-zoom--zoom-n-rotate img {
            transition: transform .5s ease-in-out;
        }

        /* The Transformation */
        .img-hover-zoom--zoom-n-rotate:hover img {
            transform: scale(2) rotate(25deg);
        }
    </style>


