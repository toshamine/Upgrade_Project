
{% block body %}
    {{ form_start(form) }}
    <div class="container rounded bg-white mt-5 mb-5" style="margin-right: -150px;">
        <div class="row">

            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">FirstName</label>{{ form_widget(form.FirstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6"><label class="labels">LastName</label>{{ form_widget(form.LastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Email</label>{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="col-md-12"><label class="labels" >Password</label>{{ form_widget(form.Password, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="col-md-12"><label class="labels">CIN</label>{{ form_widget(form.CIN, {'attr': {'class': 'form-control'}}) }}
                        </div>



                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Birthdate</label></br>
                        {{ form_widget(form.Birthdate) }}</div>
                    </div>
                </br>
                    <label class="labels">Profile Picture</label>
                    <span style="margin-left: -27px;">{{ form_widget(form.imageFile, {'attr': {'class': 'form-control file'}}) }}  </span>

                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit" value="Edit">{{ button_label|default('Save') }}</button>
                    </div>


                </div>
            </div>

            <div class="col-md-3 border-left">

                <div class="d-flex flex-column align-items-center text-center p-3 py-5 ">
                    <span class="img-hover-zoom--zoom-n-rotate hvr-wobble-to-top-right">
                    <img class="circle-image mt-5 img-hover-zoom--zoom-n-rotate hvr-glow "src="{{ pic }}"><span class="font-weight-bold"></span>
                    </span>

                </div>

            </div>

        </div>
    </div>


    {{ form_end(form) }}





{% endblock %}


