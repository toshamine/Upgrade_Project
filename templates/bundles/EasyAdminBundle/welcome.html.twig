{% extends '@EasyAdmin/page/content.html.twig' %}



{% block page_title %} Dashboad {% endblock %}

{% block content %}
    <div class="content">

        <div class="container">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">{{ 'page.dashboard.title'|trans }}</a>
                </li>
                <li class="breadcrumb-item active">{{ app.user.username }} </li>
            </ol>
            <!-- Icon Cards-->
        </div>

        <div class="container">
            <div class="row">
                <h1> Tableau de bord </h1>
            </div>
            <div class="row mt-3">
                <div class="col-6 alert-success">
                    <span class="display-3">{{ numberUsers }}  </span> Utilisateurs
                </div>
                <div class="col-6 alert-dark">
                    <span class="display-3"> {{ countWT }} </span> White tests
                </div>

            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <h3> charts  </h3>

                    <ul class="list-group">
                        <div id="piechart_3d" style="width: 900px; height: 500px;"></div>


                    </ul>

                </div>
            </div>
        </div>
    </div>


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load("current", {packages:["corechart"]});
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                {% for stat in stats %}

                [ '{{ stat.company.id }}' , {{ stat.nbCompany|number_format }}],

                {% endfor %}


            ]);

            var options = {
                title: 'Certification by Company',
                is3D: true,
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
            chart.draw(data, options);
            }
        </script>
    </script>



{% endblock content %}

