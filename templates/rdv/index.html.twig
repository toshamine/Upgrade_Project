{%  extends "Client/base.html.twig" %}

{% block title %}Exams Requests{% endblock %}



{%  block comment  %}<!--Menu just replace the parent with the link here and add the word "active" to the class= for the current page name-->
    <!-- <li class="nav-item active"><a href="" class="nav-link">Forum</a></li> -->{% endblock %}

{% block home %} {{ parent() }} {% endblock %}
{% block about %} {{ parent() }} {% endblock %}
{% block certifications %} {{ parent() }} {% endblock %}
{% block instructors %} {{ parent() }} {% endblock %}
{% block forum %}  {{ parent() }} {% endblock %}
{% block contact %} {{ parent() }} {% endblock %}


{%  block sectionname %}  Requests {% endblock %}
{% block sectionmenu %}  Exam {% endblock %}


{% block contenu %}




    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">

                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>User</th>
                        <th>Requested Date</th>
                        <th>Certificate</th>
                        <th>Status</th>
                        <th></th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for r_d_v in r_d_vs %}

                        <tr>
                        <td>
                            <a href="{{ path('user1_show', {'id': r_d_v.User.id}) }}" class="hvr-float-shadow">

                                    <img src="{{ picture }}{{ r_d_v.User.picture }}"  width="60px" height="60px" class="avatar" alt="Avatar">
                                {{ r_d_v.User }}</a></td>

                        <td>&nbsp;&nbsp;&nbsp;&nbsp;{{ r_d_v.Date ? r_d_v.Date|date('Y-m-d') : '' }}</td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;{{ r_d_v.certification.Title }}</td>
                        <td>
                            {% if r_d_v.Status == 'Accepted' %}
                            <span class="status text-success">&bull;</span>
                            {% endif %}
                            {% if r_d_v.Status == 'Refused' %}
                                <span class="status text-danger">&bull;</span>
                            {% endif %}
                            {% if r_d_v.Status == 'Pending' %}
                                <span class="status text-warning">&bull;</span>
                            {% endif %}
                            {{ r_d_v.Status }}</td>
                            <td></td>
                        <td>
                            <a href="{{ path('accept', {'id': r_d_v.id}) }}" class="settings hvr-float-shadow" title="Accept" data-toggle="tooltip"><span class="material-icons">
check_circle
</span></a>
                            <a href="{{ path('refuse', {'id': r_d_v.id}) }}" class="delete hvr-float-shadow" title="Refuse" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

        <div class="svg-wrapper-red" style="margin-left: -1px;">
            <svg height="40" width="150" xmlns="http://www.w3.org/2000/svg">
                <rect id="shape-red" height="40" width="150" />
                <div id="text" >
                    &nbsp;<a href="{{ path("refusedrdv") }}"><span ></span><span style="color: black;">Refused</span> </a>
                </div>
            </svg>
        </div>


        <div class="svg-wrapper" style="margin-left: 300px;">
            <svg height="40" width="150" xmlns="http://www.w3.org/2000/svg">
                <rect id="shape" height="40" width="150" />
                <div id="text" >
                    &nbsp;<a href="{{ path("allrdv") }}"><span ></span><span style="color: black;">History</span> </a>
                </div>
            </svg>
        </div>

        <div class="svg-wrapper-green" style="margin-left: 309px;">
            <svg height="40" width="150" xmlns="http://www.w3.org/2000/svg">
                <rect id="shape-green" height="40" width="150" />
                <div id="text" >
                    &nbsp;<a href="{{ path("acceptedrdv") }}"><span ></span><span style="color: black;">Accepted</span> </a>
                </div>
            </svg>
        </div>


    </div>



    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">



