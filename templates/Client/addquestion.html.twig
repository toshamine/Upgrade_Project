{% block contenu %}
    <div class="login-wrap p-4 p-md-5" style="margin-top: 5px;">
    <center>



            <h1 class="unselectable hvr-hang-auto">Add A New Question</h1>


            {{ form_start(form) }}

            <div class="form-group hvr-grow" style="width: 800px;">
                <label class="label" for="Title">Answer</label>
