        </div>

        <div class="form-group hvr-grow" style="width: 800px;">
            <label class="label" for="Title">ChoiceB</label>
            {{ form_widget(form.ChoiceB, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group hvr-grow" style="width: 800px;">
            <label class="label" for="Title">ChoiceC</label>
            {{ form_widget(form.ChoiceC, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group hvr-grow" style="width: 800px;">
            <label class="label" for="Title">Duration</label>
            {{ form_widget(form.Duration, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group hvr-grow" style="width: 800px;">
            <label class="label" for="Title">WhiteTest</label>
            {{ form_widget(form.whiteTest, {'attr': {'class': 'form-control select'}}) }}
        </div>

